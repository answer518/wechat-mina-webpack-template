{
  "name": "wechat-mina-webpack-template",
  "version": "0.0.1",
  "description": "A template of wechat minaapp with webpack",
  "main": "index.js",
  "scripts": {
    "lint": "yarn lint:es && yarn lint:style",
    "lint:es": "eslint src --fix",
    "lint:style": "stylelint src/**/*.scss --fix",
    "precommit": "lint-staged",
    "prebuild": "rm -rf `find dist/* ! -name project.config.json`",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack/webpack.config.js",
    "start": "yarn && cross-env NODE_ENV=development webpack --config ./config/webpack/webpack.config.js"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ],
      "*.scss": [
        "stylelint  --fix",
        "git add"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BooheeFE/wechat-mina-webpack-template.git"
  },
  "keywords": [
    "wechat"
  ],
  "author": "simbawu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BooheeFE/wechat-mina-webpack-template/issues"
  },
  "homepage": "https://github.com/BooheeFE/wechat-mina-webpack-template#readme",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.4.0",
    "eslint-config-booheefe": "^1.2.3",
    "event-hooks-webpack-plugin": "^2.1.0",
    "file-loader": "^2.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.3",
    "postcss-loader": "^3.0.0",
    "rd": "^2.0.1",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.5.0",
    "stylelint-config-booheefe": "^0.1.2",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.6",
    "webpack-merge": "^4.1.4"
  }
}
